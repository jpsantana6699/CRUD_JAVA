<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <!-- Nome da aplicação -->
    <display-name>Catálogo de Livros e Filmes</display-name>
    
    <!-- Descrição da aplicação -->
    <description>
        Sistema de catálogo para gerenciamento de livros e filmes.
        Projeto acadêmico desenvolvido com Java Web, Servlets e JSP.
    </description>
    
    <!-- Página inicial -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Configuração de encoding UTF-8 -->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Servlet: Cadastrar Item -->
    <servlet>
        <servlet-name>CadastrarItemServlet</servlet-name>
        <servlet-class>com.catalogo.servlet.CadastrarItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastrarItemServlet</servlet-name>
        <url-pattern>/cadastrar</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet: Listar Itens -->
    <servlet>
        <servlet-name>ListarItensServlet</servlet-name>
        <servlet-class>com.catalogo.servlet.ListarItensServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListarItensServlet</servlet-name>
        <url-pattern>/listar</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet: Editar Item -->
    <servlet>
        <servlet-name>EditarItemServlet</servlet-name>
        <servlet-class>com.catalogo.servlet.EditarItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditarItemServlet</servlet-name>
        <url-pattern>/editar</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet: Excluir Item -->
    <servlet>
        <servlet-name>ExcluirItemServlet</servlet-name>
        <servlet-class>com.catalogo.servlet.ExcluirItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExcluirItemServlet</servlet-name>
        <url-pattern>/excluir</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet: Buscar Item -->
    <servlet>
        <servlet-name>BuscarItemServlet</servlet-name>
        <servlet-class>com.catalogo.servlet.BuscarItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuscarItemServlet</servlet-name>
        <url-pattern>/buscar</url-pattern>
    </servlet-mapping>
    
    <!-- Página de erro 404 -->
    <error-page>
        <error-code>404</error-code>
        <location>/index.jsp</location>
    </error-page>
    
    <!-- Página de erro 500 -->
    <error-page>
        <error-code>500</error-code>
        <location>/index.jsp</location>
    </error-page>
    
    <!-- Timeout de sessão (30 minutos) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
</web-app>
